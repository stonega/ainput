{
  "manifest_version": 3,

  "name": "AInput",
  "description": "Enhance text input with AI-powered grammar fixing and translation",
  "version": "1.0",

  "options_page": "options.html",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "commands": {
    "fix-grammar": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Fix grammar of selected text"
    },
    "translate": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Translate selected text"
    }
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
